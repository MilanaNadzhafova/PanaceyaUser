<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - приложение ASP.NET</title>
    <link rel="icon" type="image/x-icon" href="~/images/favicon.png" />

    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700" rel="stylesheet" type="text/css" />
    @Html.Partial("~/Views/Home/Login.cshtml")
    @Html.Partial("~/Views/Users/Registration.cshtml")

    @Styles.Render("~/Content/datepicker.css")
    @Styles.Render("~/Content/site.css")
    @Styles.Render("~/Content/styles-dist.css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href="#page-top">
                <img src="~/images/navbar-logo.svg"
                     alt="..." />
            </a>
            <button onclick="AddColor()" class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse"
                    data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false"
                    aria-label="Toggle navigation">
                <i class="fas fa-bars ml-1"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav text-uppercase ml-auto">
                    @if (HttpContext.Current.User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item"><a class="nav-link js-scroll-trigger" href="~/Home/Index" target="_self">Главная</a></li>
                        <li class="nav-item"><a class="nav-link js-scroll-trigger" href="~/Medicines/Index" target="_self">Каталог товаров</a></li>
                        <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#advantages" target="_self">О нас</a></li>
                        <li class="nav-item hidi"><a class="nav-link js-scroll-trigger icon ml-5 " href="~/Home/Logout" target="_self" title="Выход"><i class="fas fa-user-alt"></i> </a></li>
                        <li class="nav-item hidi"><a class="nav-link js-scroll-trigger icon " href="~/Basket_Consist/Index" target="_self" title="Корзина"><i class="das fas fa-shopping-basket"></i> </a></li>
                        <li class="nav-item dispForIcon" style="display: none"><a class="nav-link js-scroll-trigger " href="~/Basket_Consist/Index" target="_self">Корзина</a></li>
                        <li class="nav-item dispForIcon" style="display: none"><a class="nav-link js-scroll-trigger " href="~/Home/Logout" target="_self">Выход</a></li>

                    }
                    else
                    {

                        <li class="nav-item"><a class="nav-link js-scroll-trigger" href="~/Home/Index" target="_self">Главная</a></li>
                        <li class="nav-item"><a class="nav-link js-scroll-trigger" href="~/Medicines/Index" target="_self">Каталог товаров</a></li>
                        <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#advantages" target="_self">О нас</a></li>
                        <li class="nav-item dispForIcon" style="display:none"><a class="nav-link js-scroll-trigger " data-toggle="modal" data-target="#exampleModalCenter">Вход</a></li>
                        <li class="nav-item hidi"><a class="nav-link js-scroll-trigger icon ml-5" data-toggle="modal" data-target="#exampleModalCenter" style="cursor:pointer" title="Вход"><i class="fas fa-user-alt"></i> </a></li>

                    }

                </ul>
            </div>
        </div>

    </nav>
    <div id="ModalOfBasket" class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header text-center CompleteReg" style="color:white!important">
                    <button type="button" class="close" data-dismiss="modal" style="outline:none!important" aria-label="Close">
                        <span aria-hidden="true" style="color: black !important; font-size: 2rem">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Товар успешно добавлен в корзину!</p>
                    <button class="btn LoginBtn">Перейти к корзине</button>

                </div>
                
            </div>
        </div>
    </div>

    <div id="ModalOfError" class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header text-center CompleteReg" style="color:white!important">
                    <button type="button" class="close" data-dismiss="modal" style="outline:none!important" aria-label="Close">
                        <span aria-hidden="true" style="color: black !important; font-size: 2rem">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>К сожалению, товара нет в наличии(</p>
                    <button class="btn LoginBtn">Перейти к каталогу</button>

                </div>


                </div>
                
            </div>
        </div>
    </div>

    @RenderBody()



    <footer class="footer py-4">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-lg-4 offset-lg-2 text-lg-left">
                    <p class="forfoother mb-2 ">
                        Copyright &copy; PANACEYA
                        <script>
                            document.write(new Date().getFullYear());

                        </script>
                    </p>

                </div>
                <div class="col-lg-4 text-lg-right">
                    <p class="forfoother mb-2 "><a href="mailto:panaceya@gmail.com">panaceya@gmail.com</a></p>
                    <p class="forfoother "><a href="tel:+7 (913) 025-69-85">+7 (913) 025-69-85</a></p>
                </div>
            </div>
        </div>
    </footer>




    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/owl-carousel/1.3.3/owl.carousel.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Third party plugin JS-->
    <script src="https://use.fontawesome.com/releases/v5.15.3/js/all.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    @Scripts.Render("~/Scripts/jquery.maskedinput.js")
    @Scripts.Render("~/bundles/jquerymaskedinput.js")
    @Scripts.Render("~/Scripts/datepicker.js")
    @Scripts.Render("~/Scripts/jqBootstrapValidation.js")
    @Scripts.Render("~/Scripts/contact_me.js")
    @Scripts.Render("~/Scripts/JavaScript.js")
    @Scripts.Render("~/Scripts/scripts.js")
    @Scripts.Render("~/Scripts/validate.js")
    @Scripts.Render("~/Scripts/forMedicines.js")

    @RenderSection("scripts", required: false)

</body>
</html>
